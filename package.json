{
  "name": "@webmuds/text",
  "version": "0.1.2",
  "description": "MUD text parser for color and padding",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "npm run lint && c8 mocha",
    "test:ci": "mocha",
    "lint": "standard --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/webmuds/text.git"
  },
  "author": "webmuds.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/webmuds/text/issues"
  },
  "homepage": "https://github.com/webmuds/text#readme",
  "devDependencies": {
    "@types/chai": "4.2.18",
    "@types/mocha": "8.2.2",
    "c8": "8.0.1",
    "chai": "4.3.4",
    "mocha": "8.4.0",
    "standard": "16.0.3"
  },
  "standard": {
    "env": "mocha"
  },
  "mocha": {
    "recursive": true,
    "reporter": "dot",
    "colors": true
  },
  "c8": {
    "all": true,
    "include": [
      "src"
    ]
  }
}
